<Window x:Class="TheGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border Margin="5" BorderBrush="Navy">
        <Grid Background="#FFA67B7B">
            <Canvas Name="canvas" Background="LightBlue" MouseLeftButtonDown="PlayerJump" MouseLeftButtonUp="PlayerJumpEnd" MouseRightButtonDown ="PlayerShoot" MouseRightButtonUp="EndShoot" >
                <Image x:Name="imagePlayer" HorizontalAlignment="Left" Height="100" Margin="10,302,0,0" VerticalAlignment="Top" Width="100" Source="{Binding PlayerImagePlay}" Canvas.Bottom="50" Canvas.Left="30"/>
            </Canvas>
        </Grid>
    </Border>
</Window>
